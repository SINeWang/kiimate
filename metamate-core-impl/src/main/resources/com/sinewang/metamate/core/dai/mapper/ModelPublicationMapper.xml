<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sinewang.metamate.core.dai.mapper.ModelPublicationMapper">

    <resultMap id="Publication" type="wang.yanjiong.metamate.core.dai.ModelPublicationDai$Publication">
        <result column="id" property="id"/>
        <result column="pub_ext_id" property="pubExtId"/>
        <result column="provider_id" property="providerId"/>
        <result column="ext_id" property="extId"/>
        <result column="int_id" property="intId"/>
        <result column="version" property="version"/>
        <result column="pub" property="publication"/>
        <result column="operator_id" property="operatorId"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <insert id="insertPublication">
        INSERT INTO mm_m_pub
        (id, pub_ext_id, provider_id, ext_id, int_id, version, pub, operator_id, created_at)
        VALUES
        (#{id}, #{providerId}, #{extId}, #{intId}, #{version}, #{publication}, #{operatorId}, #{createdAt})
    </insert>

    <select id="selectPublicationByProviderIdExtIdPubVersion" resultMap="Publication">
        SELECT id, pub_ext_id, provider_id, ext_id, int_id, version, pub, operator_id, created_at
        FROM  mm_m_pub
        WHERE pub_ext_id = #{pubExtId}
    </select>

    <delete id="deletePublicationByProviderIdExtIdPubVersion">
        DELETE
        FROM  mm_m_pub
        WHERE provider_id = #{providerId} AND ext_id = #{extId} AND pub = #{publication} AND version = #{version}
    </delete>

    <delete id="deletePublicationByProviderId">
        DELETE
        FROM  mm_m_pub
        WHERE provider_id = #{providerId}
    </delete>
</mapper>
